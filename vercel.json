{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/room/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*\\.js)",
      "dest": "/public/$1",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "src": "/(.*\\.css)",
      "dest": "/public/$1",
      "headers": {
        "content-type": "text/css"
      }
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|ico|svg))",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
